{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["DOM"],
    "declaration": true,
    "declarationDir": ".types",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}